@model AsyncInn.Models.HotelRoom

@{
    ViewData["Title"] = "Edit";
}

<head>
    <link rel="stylesheet" href="~/StyleSheet.css" />
</head>

<h2>Edit</h2>

<h4>HotelRoom</h4>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="HotelID" />
    <div class="form-group">
        <label asp-for="RoomNumber"></label>
        <input asp-for="RoomNumber" />
        <span asp-validation-for="RoomNumber"></span>
    </div>
    <input type="hidden" asp-for="RoomID" />
    <div class="form-group">
        <label asp-for="Rate"></label>
        <input asp-for="Rate" />
        <span asp-validation-for="Rate"></span>
    </div>
    <div>
        <div class="checkbox">
            <label>
                <input asp-for="PetFriendly" /> @Html.DisplayNameFor(model => model.PetFriendly)
            </label>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" />
    </div>
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
